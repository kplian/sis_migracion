CREATE OR REPLACE FUNCTION migracion.f_tri_tts_finalidad_cta_bancaria_tcuenta_bancaria (
)
RETURNS trigger AS
$body$
DECLARE
		 
		g_registros record;
		v_consulta varchar;
		v_res_cone  varchar;
		v_cadena_cnx varchar;
		v_cadena_con varchar;
		resp boolean;
		
		BEGIN
		   IF(TG_OP = 'INSERT') THEN
             v_consulta =  'SELECT migracion.f_trans_tts_finalidad_cta_bancaria_tcuenta_bancaria (
                  '''||TG_OP::varchar||''','||COALESCE(NEW.id_finalidad_cta_bancaria::varchar,'NULL')||','||COALESCE(NEW.id_cuenta_bancaria::varchar,'NULL')||','||COALESCE(NEW.id_finalidad::varchar,'NULL')||','||COALESCE(''''||NEW.estado::varchar||'''','NULL')||','||COALESCE(''''||NEW.fecha_mod::varchar||'''','NULL')||','||COALESCE(''''||NEW.fecha_reg::varchar||'''','NULL')||','||COALESCE(''''||NEW.usuario_mod::varchar||'''','NULL')||','||COALESCE(''''||NEW.usuario_reg::varchar||'''','NULL')||','||'NULL'||') as res';				  
           ELSIF (TG_OP ='UPDATE') THEN
		   
			 v_consulta =  'SELECT migracion.f_trans_tts_finalidad_cta_bancaria_tcuenta_bancaria (
                  '''||TG_OP::varchar||''','||COALESCE(NEW.id_finalidad_cta_bancaria::varchar,'NULL')||','||COALESCE(NEW.id_cuenta_bancaria::varchar,'NULL')||','||COALESCE(NEW.id_finalidad::varchar,'NULL')||','||COALESCE(''''||NEW.estado::varchar||'''','NULL')||','||COALESCE(''''||NEW.fecha_mod::varchar||'''','NULL')||','||COALESCE(''''||NEW.fecha_reg::varchar||'''','NULL')||','||COALESCE(''''||NEW.usuario_mod::varchar||'''','NULL')||','||COALESCE(''''||NEW.usuario_reg::varchar||'''','NULL')||','||COALESCE(OLD.id_finalidad::varchar,'NULL')||') as res';				  
		  ELSE 
		      v_consulta =  ' SELECT migracion.f_trans_tts_finalidad_cta_bancaria_tcuenta_bancaria (
		              '''||TG_OP::varchar||''','||OLD.id_finalidad_cta_bancaria||','||COALESCE(OLD.id_cuenta_bancaria::varchar,'NULL')||',NULL,NULL,NULL,NULL,NULL,NULL,'||COALESCE(OLD.id_finalidad::varchar,'NULL')||') as res';
		       
		   END IF;
		   --------------------------------------
		   -- PARA PROBAR SI FUNCIONA LA FUNCION DE TRANFROMACION, HABILITAR EXECUTE
		   ------------------------------------------
		     --EXECUTE (v_consulta);
		   
		   
		    INSERT INTO 
		                      migracion.tmig_migracion
		                    (
		                      verificado,
		                      consulta,
		                      operacion
		                    ) 
		                    VALUES (
		                      'no',
		                       v_consulta,
		                       TG_OP::varchar
		                       
		                    );
		
		  RETURN NULL;
		
		END;
$body$
LANGUAGE 'plpgsql'
VOLATILE
CALLED ON NULL INPUT
SECURITY INVOKER;