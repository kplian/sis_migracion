CREATE OR REPLACE FUNCTION migracion.f_trans_tts_usuario_cuenta_banc_tusuario_cuenta_banc (
			  v_operacion varchar,p_id_usuario int4,p_id_usuario_cuenta_banc int4,p_estado varchar,p_fecha_mod timestamp,p_fecha_reg timestamp,p_id_cuenta_bancaria int4,p_id_parametro int4,p_tipo_permiso varchar,p_usu_mod varchar,p_usu_reg varchar)
			RETURNS varchar [] AS
			$BODY$

DECLARE
			 
			g_registros record;
			v_consulta varchar;
			v_res_cone  varchar;
			v_cadena_cnx varchar;
			v_cadena_con varchar;
			resp boolean;
			v_resp varchar;
			v_respuesta varchar[];
			
			g_registros_resp record;
			v_id_usuario_cuenta_banc int4;
			v_estado varchar;
			v_estado_reg varchar;
			v_fecha_mod timestamp;
			v_fecha_reg timestamp;
			v_id_cuenta_bancaria int4;
			v_id_usuario int4;
			v_id_usuario_ai int4;
			v_id_usuario_mod int4;
			v_id_usuario_reg int4;
			v_tipo_permiso varchar;
			v_usuario_ai varchar;
BEGIN
			
			
			          --funcion para obtener cadena de conexion
			          v_cadena_cnx =  migracion.f_obtener_cadena_con_dblink();
			          
			          
			           ---------------------------------------
			           --previamente se tranforman los datos  (descomentar)
			           ---------------------------------------

			           /*
			           			v_id_usuario_cuenta_banc=p_::int4;
			v_estado=convert(p_::varchar, 'LATIN1', 'UTF8');
			v_estado_reg=convert(p_::varchar, 'LATIN1', 'UTF8');
			v_fecha_mod=p_::timestamp;
			v_fecha_reg=p_::timestamp;
			v_id_cuenta_bancaria=p_::int4;
			v_id_usuario=p_::int4;
			v_id_usuario_ai=p_::int4;
			v_id_usuario_mod=p_::int4;
			v_id_usuario_reg=p_::int4;
			v_tipo_permiso=convert(p_::varchar, 'LATIN1', 'UTF8');
			v_usuario_ai=convert(p_::varchar, 'LATIN1', 'UTF8');
 */   
			    --cadena para la llamada a la funcion de insercion en la base de datos destino
			      
			        
			          v_consulta = 'select migra.f__on_trig_tts_usuario_cuenta_banc_tusuario_cuenta_banc (
			               '''||v_operacion::varchar||''','||COALESCE(v_id_usuario_cuenta_banc::varchar,'NULL')||','||COALESCE(''''||v_estado::varchar||'''','NULL')||','||COALESCE(''''||v_estado_reg::varchar||'''','NULL')||','||COALESCE(''''||v_fecha_mod::varchar||'''','NULL')||','||COALESCE(''''||v_fecha_reg::varchar||'''','NULL')||','||COALESCE(v_id_cuenta_bancaria::varchar,'NULL')||','||COALESCE(v_id_usuario::varchar,'NULL')||','||COALESCE(v_id_usuario_ai::varchar,'NULL')||','||COALESCE(v_id_usuario_mod::varchar,'NULL')||','||COALESCE(v_id_usuario_reg::varchar,'NULL')||','||COALESCE(''''||v_tipo_permiso::varchar||'''','NULL')||','||COALESCE(''''||v_usuario_ai::varchar||'''','NULL')||')';
			          --probar la conexion con dblink
			          
					   --probar la conexion con dblink
			          v_resp =  (SELECT dblink_connect(v_cadena_cnx));
			            
			             IF(v_resp!='OK') THEN
			            
			             	--modificar bandera de fallo  
			                 raise exception 'FALLA CONEXION A LA BASE DE DATOS CON DBLINK';
			                 
			             ELSE
					  
			         
			               PERFORM * FROM dblink(v_consulta,true) AS ( xx varchar);
			                v_res_cone=(select dblink_disconnect());
			             END IF;
			            
			            v_respuesta[1]='TRUE';
                       
			           RETURN v_respuesta;
			EXCEPTION
			   WHEN others THEN
			   
			    v_res_cone=(select dblink_disconnect());
			     v_respuesta[1]='FALSE';
                 v_respuesta[2]=SQLERRM;
                 v_respuesta[3]=SQLSTATE;
                 v_respuesta[4]=v_consulta;
                 
    
                 
                 RETURN v_respuesta;
			
			END;
			$BODY$

LANGUAGE 'plpgsql'
			VOLATILE
			CALLED ON NULL INPUT
			SECURITY INVOKER;